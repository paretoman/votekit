{
  "name": "@paretoman/votekit",
  "version": "0.0.4",
  "description": "An explorable sandbox that shows how different voting methods work using a spatial opinion model.",
  "type": "module",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "npm run test -ws",
    "test:compute": "npm run test -w src/compute/compute",
    "doc": "jsdoc -c jsdoc.json",
    "build": "npm run build-1 && npm run build-2 && npm run build-3",
    "build-1": "npm run build -w @paretoman/votekit-add-sandboxes",
    "build-2": "npm run copy0 && npm run copy1 && npm run copy2",
    "copy0": "copyfiles -u 3 src/addSandboxes/dist/addSandboxes*.js dist/src/addSandboxes/",
    "copy1": "copyfiles src/**/*.{css,html} dist -e src/demo/**/* -e **/dist/**/*",
    "copy2": "copyfiles test/**/*.* dist",
    "build-3": "npm run copy3 && npm run build -w @paretoman/votekit-demo",
    "copy3": "copyfiles dist/**/* tutorial/**/* docs/**/* src/demo",
    "snowpack": "snowpack build",
    "lint:compute": "eslint ./src/compute",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .js,.jsx .",
    "check-types": "tsc --noEmit -p ./src/compute/jsconfig.json",
    "check-types-silent": "tsc-silent -p ./src/compute/jsconfig.json --suppress @/node_modules",
    "check-types-silent-all": "tsc-silent -p ./jsconfig.json --suppress @/node_modules",
    "clean": "rimraf dist docs && npm run clean-1",
    "clean-1": "npm run clean -w @paretoman/votekit-demo",
    "build-clean": "npm run clean && npm run doc && npm run build",
    "push-site": "npm run push-site -w @paretoman/votekit-demo",
    "patch": "npm version patch --workspaces && git add . && git commit -m versionPatch && npm version patch",
    "push-main": "git push --follow-tags && git push",
    "publish": "npm publish -ws --access public",
    "after-build": "npm run push-site && npm run patch && npm run push-main && npm run publish",
    "all": "npm run build-clean && npm run after-build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paretoman/votekit.git"
  },
  "author": {
    "name": "paretoman",
    "url": "https://paretoman.github.io"
  },
  "license": "MIT-0",
  "bugs": {
    "url": "https://github.com/paretoman/votekit/issues"
  },
  "homepage": "https://paretoman.github.io/votekit",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@mithrandirii/canvas2svg": "^1.0.24",
    "@tweenjs/tween.js": "^18.6.4",
    "copyfiles": "^2.4.1",
    "d3-contour": "^3.0.1",
    "d3-delaunay": "^6.0.2",
    "d3-geo": "^3.0.1",
    "d3-polygon": "^3.0.1",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^48.2.1",
    "jsdoc": "^3.6.10",
    "mocha": "^10.3.0",
    "parcel": "^2.4.1",
    "process": "^0.11.10",
    "rimraf": "^5.0.5",
    "seedrandom": "^3.0.5",
    "simplex-noise": "^3.0.1",
    "snowpack": "^3.8.8",
    "split-polygon": "^1.0.0",
    "tsc-silent": "^1.2.2",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "explorable",
    "sandbox",
    "voting",
    "voting-methods",
    "social-choice",
    "computational-social-choice",
    "elections",
    "strategy",
    "electoral-methods",
    "plurality",
    "approval",
    "condorcet",
    "instant-runoff",
    "score",
    "star",
    "proportional",
    "proportional-representation",
    "districts",
    "redistricting",
    "single-transferable-vote",
    "monroe",
    "thiele",
    "proportional-approval-voting",
    "phragmen",
    "party-list",
    "party-list-proportional",
    "dHondt",
    "Huntington-Hill",
    "Webster",
    "Sainte-Lague",
    "MMP",
    "OLPR"
  ],
  "workspaces": [
    "src/*",
    "src/compute/*"
  ]
}